<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.adapter.LabFour">

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textStyle="bold"
              android:text="ArrayAdapter Test" />
    <ListView android:id="@+id/array_list"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" />
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textStyle="bold"
              android:text="SimpleAdapter Test"/>
    <ListView android:id="@+id/simple_list"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" />
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textStyle="bold"
              android:text="Cursor Adapter Test" />
    <ListView android:id="@+id/cursor_list"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" />
</LinearLayout>