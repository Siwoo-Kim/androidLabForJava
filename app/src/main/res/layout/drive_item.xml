<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView android:id="@+id/drive_type_img"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
    <TextView android:id="@+id/drive_title_text"
              android:layout_width="wrap_content"
              android:layout_toRightOf="@id/drive_type_img"
              android:layout_height="wrap_content"
              android:layout_marginLeft="16dp"/>
    <TextView android:id="@+id/drive_date_text"
              android:layout_width="wrap_content"
              android:layout_below="@+id/drive_title_text"
              android:layout_alignLeft="@+id/drive_title_text"
              android:layout_height="wrap_content"/>
    <ImageView android:id="@+id/drive_menu_img"
               android:layout_width="wrap_content"
               android:layout_alignParentRight="true"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_menu" />
</RelativeLayout>