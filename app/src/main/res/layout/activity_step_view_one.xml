<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".component.activity.view.StepViewOne">

    <TextView
            android:id="@+id/autolink_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="abcd http://google.com efg sm123tt@google.com hij 111-222-3333"
            android:autoLink="web|email|phone"/>
    <TextView
            android:id="@+id/maxlines_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/dummy"
            android:maxLines="2"
            android:ellipsize="end"  />

    <TextView
            android:id="@+id/typeface_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/greeting" />

    <ImageView
            android:id="@+id/sample_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sample"
            android:maxHeight="100dp"
            android:maxWidth="100dp"
            android:adjustViewBounds="true"
            android:layout_marginTop="16dp"/>
    <EditText
            android:id="@+id/phone_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:inputType="phone"
            android:hint="Your phone number" />

    <CheckBox
            android:id="@+id/simple_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="Unchecked"/>
</LinearLayout>