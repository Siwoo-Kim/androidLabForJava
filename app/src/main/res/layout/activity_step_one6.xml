<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".component.activity.StepOne">

    <Button android:id="@+id/visible_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VISIBLE TRUE"/>
    <TextView android:id="@+id/greeting_text"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Hello Android"
              android:visibility="invisible"
              android:padding="16dp" android:background="@android:color/holo_red_light" android:textColor="#FFFFFF"
              android:gravity="center"/>
    <Button android:id="@+id/invisible_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INVISIBLE" />
</LinearLayout>